<h1>Liste des Marques</h1>
<table>
    <thead>
    <tr>
        <th>Nom</th>
        <th>Description</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for marque in marques %}
        <tr>
            <td>{{ marque.nom }}</td>
            <td>{{ marque.description }}</td>
            <td>
                <a href="{{ path('marque_edit', {'id': marque.id}) }}" class="btn btn-primary">Modifier</a>
                <form action="{{ path('marque_delete', {'id': marque.id}) }}" method="POST" style="display:inline;">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ marque.id) }}">
                    <button type="submit" class="btn btn-danger">Supprimer</button>
                </form>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
<a href="{{ path('marque_new') }}" class="btn btn-success">Ajouter une nouvelle marque</a>
